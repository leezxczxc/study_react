{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "moduleResolution": "node",
    "outDir": "./dist",
    "target": "es5",
    "module": "es6",
    "jsx": "react",
    "baseUrl": ".",
    "paths": {
      "components/*": ["./src/client/components/*"],
      "models/*": ["./src/client/models/*"]
    }
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "./node_modules/**/*"
  ]
}